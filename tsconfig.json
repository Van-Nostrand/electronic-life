{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "strict": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
